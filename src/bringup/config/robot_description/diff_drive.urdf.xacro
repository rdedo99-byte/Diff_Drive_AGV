<?xml version='1.0'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dd_robot">
  <xacro:include filename="$(find realsense2_description)/urdf/_d435.urdf.xacro" />

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

  <link name="base_footprint">
  </link>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.21 0.2 0.11" />
      </geometry>
      <material name="blue">
        <color rgba="0 0.5 1 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.068" rpy="0 0 0" />
      <geometry>
        <box size="0.21 0.2 0.11" />
      </geometry>
    </collision>
    <inertial>
      <mass value="5" />
      <inertia ixx="0.13" ixy="0.0" ixz="0.0" iyy="0.21" iyz="0.0" izz="0.13" />
    </inertial>
  </link>

  <link name="caster">
    <visual>
      <origin xyz="0.0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.033" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.033" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
    </inertial>
  </link>

  <joint name="joint_caster" type="fixed">
    <parent link="base_link" />
    <child link="caster" />
    <origin xyz="0.08 0 -0.035" rpy="0 0 0" />
  </joint>

  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
        <cylinder length="0.026" radius="0.033" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
        <cylinder length="0.026" radius="0.033" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005" />
    </inertial>
  </link>

  <joint name="joint_right_wheel" type="continuous">
    <parent link="base_link" />
    <child link="right_wheel" />
    <origin xyz="-0.09 -0.1 -0.035" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
        <cylinder length="0.026" radius="0.033" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
        <cylinder length="0.026" radius="0.033" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005" />
    </inertial>
  </link>

  <joint name="joint_left_wheel" type="continuous">
    <parent link="base_link" />
    <child link="left_wheel" />
    <origin xyz="-0.09 0.1 -0.035" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser" />
    <origin xyz="0 0 0.055" rpy="0 0 0" />
  </joint>

  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.06" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.06" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005" />
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu" />
    <origin xyz="-0.105 0 0" rpy="0 0 0" />
  </joint>

  <link name="imu">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.026 0.02 0.002" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.026 0.02 0.002" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005" />
    </inertial>
  </link>

  <xacro:sensor_d435 parent="base_link" name="camera0" use_nominal_extrinsics="true">
    <origin xyz="0.1 0.0 0.055" rpy="0 0 0" />
  </xacro:sensor_d435>

  <ros2_control name="dd_robot_control" type="system">
    <hardware>
      <plugin>diffdrive_control/ESP32DiffDriveHardware</plugin>
      <param name="port">/dev/ttyESP32</param>
      <param name="baud_rate">115200</param>
      <param name="timeout">1000</param>
    </hardware>

    <joint name="joint_left_wheel">
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position" />
      <state_interface name="velocity" />
    </joint>

    <joint name="joint_right_wheel">
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position" />
      <state_interface name="velocity" />
    </joint>
  </ros2_control>

</robot>